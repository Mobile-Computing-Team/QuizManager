<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Creator"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:text="@string/create"
        android:textColor="#ffffffff"
        android:background="@drawable/creator_button"
        android:onClick="GotoMathFun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Attempt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Attempt"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:text="@string/attempt"
        android:textColor="#ffffffff"
        android:background="@drawable/attempt_button"
        android:onClick="GotoMathFun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Creator"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Math"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:text="@string/math"
        android:textColor="#ffffffff"
        android:background="@drawable/math_button"
        android:onClick="GotoMathFun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />
</androidx.constraintlayout.widget.ConstraintLayout>